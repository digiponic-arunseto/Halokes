<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAssignmentTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="end"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_chat_conv">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/colorPrimaryLighter"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/tvChatContactName"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="end"-->
            <!--android:padding="6dp"-->
            <!--android:singleLine="true"-->
            <!--android:textAllCaps="true"-->
            <!--android:textStyle="bold" />-->
            <TextView
                android:id="@+id/tvChatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/effect_ripple_square"
                android:focusable="true"
                android:padding="6dp"
                android:focusableInTouchMode="true"
                android:text="OK Pak, Siap!"
                android:textColor="@color/colorDark" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvChatMessageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/colorPrimaryLighter"
        android:gravity="end"
        android:paddingEnd="12dp"
        android:text="08:00"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
