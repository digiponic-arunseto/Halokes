<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="120dp"
                android:layout_height="6dp"
                android:background="@drawable/bg_round_side" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuSchedule"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_jadwal">

                            <TextView
                                android:id="@+id/tvMenuBadgeSchedule"
                                style="@style/MenuSubBadge"
                                android:text="" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Jadwal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuAssignment"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_tugas">

                            <TextView
                                android:id="@+id/tvMenuBadgeAssignment"
                                style="@style/MenuSubBadge"
                                android:text="99" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Tugas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuGrade"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_nilai">

                            <TextView
                                android:id="@+id/tvMenuBadgeGrade"
                                style="@style/MenuSubBadge"
                                android:text="12" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Nilai" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuAttendance"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_absensi">

                            <TextView
                                android:id="@+id/tvMenuBadgeAttendance"
                                style="@style/MenuSubBadge"
                                android:text="" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Absensi " />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuClass"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_kelas">

                            <TextView
                                android:id="@+id/tvMenuBadgeClass"
                                style="@style/MenuSubBadge"
                                android:text="" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Data Kelas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuExtra"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_ekskul">

                            <TextView
                                android:id="@+id/tvMenuBadgeExtra"
                                style="@style/MenuSubBadge"
                                android:text="2" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Ekskul" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp">

                        <RelativeLayout
                            android:id="@+id/llMenuBehavior"
                            style="@style/MenuSubButton"
                            android:background="@drawable/ic_menu_konseling">

                            <TextView
                                android:id="@+id/tvMenuBadgeBehavior"
                                style="@style/MenuSubBadge"
                                android:text="2" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/MenuTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Konseling" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>