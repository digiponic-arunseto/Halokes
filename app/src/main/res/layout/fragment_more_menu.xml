<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvBottomSheetDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp">

            <TextView

                android:id="@+id/tvHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down_48dp"
                android:gravity="center_vertical"
                android:text="Menu Lainnya"
                android:textColor="@color/colorBackground"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <RelativeLayout
                    android:id="@+id/llMenuGrade"
                    style="@style/MenuSubButton"
                    android:layout_weight="1">


                    <ImageView
                        style="@style/MenuSubImg"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_menu_grade"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nilai" />

                    <TextView
                        android:text="12"
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeGrade" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuBehavior"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_behaviour"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perilaku" />
                    <TextView
                        android:text="2"
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeBehavior" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuAssignment"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_assignment"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tugas" />
                    <TextView
                        android:text="99"
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeAssignment" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuSchedule"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_schedule"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Jadwal" />
                    <TextView
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeSchedule" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <RelativeLayout
                    android:id="@+id/llMenuClass"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_class"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Kelas" />
                    <TextView
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeClass" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuSubject"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_subject"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matpel" />
                    <TextView
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeSubject" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuAnnouncement"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_announcement"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pengumuman" />
                    <TextView
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeAnnouncement" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuAttendance"
                    style="@style/MenuSubButton"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/MenuSubImg"
                        android:src="@drawable/ic_menu_attendace"/>

                    <TextView
                        style="@style/MenuTitle1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Absensi" />
                    <TextView
                        style="@style/MenuSubBadge"
                        android:id="@+id/tvMenuBadgeAttendance" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>