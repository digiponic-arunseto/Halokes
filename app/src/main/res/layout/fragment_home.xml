<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleBar"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="start"
            android:text="Selamat Datang !"
            android:textAlignment="textStart"
            android:paddingStart="12dp"
            android:layout_marginBottom="48dp"
            android:textColor="@color/colorBackground"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <RelativeLayout
                        android:id="@+id/llMenuGrade"
                        style="@style/MenuSubButton"
                        android:layout_weight="1">


                        <ImageView
                            style="@style/MenuSubImg"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_menu_grade"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nilai" />

                        <TextView
                            android:text="12"
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeGrade" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuBehavior"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_behaviour"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perilaku" />
                        <TextView
                            android:text="2"
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeBehavior" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuAssignment"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_assignment"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tugas" />
                        <TextView
                            android:text="99"
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeAssignment" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuSchedule"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_schedule"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Jadwal" />
                        <TextView
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeSchedule" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <RelativeLayout
                        android:id="@+id/llMenuClass"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_class"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Kelas" />
                        <TextView
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeClass" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuSubject"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_subject"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Matpel" />
                        <TextView
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeSubject" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuAnnouncement"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_announcement"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengumuman" />
                        <TextView
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeAnnouncement" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llMenuMore"
                        style="@style/MenuSubButton"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/MenuSubImg"
                            android:src="@drawable/ic_menu_more_nobg_24dp"/>

                        <TextView
                            style="@style/MenuTitle"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya " />
                        <TextView
                            style="@style/MenuSubBadge"
                            android:id="@+id/tvMenuBadgeMore" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>