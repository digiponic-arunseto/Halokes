<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAssignmentTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/effect_ripple_square"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingTop="0dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                >

                <TextView
                    android:id="@+id/tvAssignmentStatusIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_round_corner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAssignmentTitle"
                        style="@style/CardHeader"
                        android:paddingTop="6dp"
                        android:paddingStart="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TUGAS ALJABAR 1"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvAssignmentDesc"
                        style="@style/CardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:padding="0dp"
                        android:paddingStart="6dp"
                        android:paddingBottom="6dp"
                        android:text="Deskripsi\nDeskripsi"
                        android:textSize="9sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAssignmentTimeLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:background="@drawable/bg_round_corner_border_primary"
                    android:minWidth="60dp"
                    android:text="3 Hari lagi"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_textlines_top"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <TextView
                    android:id="@+id/tvAssignmentDeadline"
                    style="@style/CardText"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Pengumpulan : 2019-11-04"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAssignmentStatus"
                    style="@style/CardFooter"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_check_24dp"
                    android:text="Konfirmasi"
                    android:textSize="9sp"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
