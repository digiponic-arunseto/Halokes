<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_bluewhite"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btnSkip"
        style="@style/MainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_next_white_24dp"
        android:textStyle="italic|normal"
        android:background="@drawable/effect_ripple_square"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Lewati langkah ini"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:animateLayoutChanges="true"
            android:id="@+id/vfPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/icon_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Setelah proses ini selesai, Anda dapat masuk dengan Email dan NISN."
                        android:textAlignment="center"
                        android:textColor="@color/colorBackground" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:contentPadding="12dp">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_mail_24dp"
                            android:drawablePadding="12dp"
                            android:hint="Isikan Email Anda : "
                            android:inputType="textEmailAddress"
                            android:padding="12dp"
                            android:paddingTop="30dp"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <Button
                        android:id="@+id/btnNext"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_side"
                        android:drawableEnd="@drawable/ic_next_white_24dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Selanjutnya"
                        android:textAllCaps="false"
                        android:textSize="14sp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/icon_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Setelah proses ini selesai, Anda dapat masuk dengan Email dan NISN."
                        android:textAlignment="center"
                        android:textColor="@color/colorBackground" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:contentPadding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_password_blue_24dp"
                                android:drawablePadding="12dp"
                                android:hint="Password Baru : "
                                android:inputType="textPassword"
                                android:padding="12dp"
                                android:paddingTop="30dp"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/etPasswordConfirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:drawableStart="@drawable/ic_key_24dp"
                                android:drawablePadding="12dp"
                                android:hint="Konfirmasi Password : "
                                android:inputType="textPassword"
                                android:padding="12dp"
                                android:paddingTop="30dp"
                                android:textSize="12sp"
                                android:textStyle="italic" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <Button
                        android:id="@+id/btnConfirm"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_side"
                        android:drawableEnd="@drawable/ic_check_24dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Selesai"
                        android:textAllCaps="false"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnBack"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="@drawable/effect_ripple_square"
                        android:padding="6dp"
                        android:text="Kembali"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDark"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </ViewFlipper>
    </ScrollView>
</RelativeLayout>