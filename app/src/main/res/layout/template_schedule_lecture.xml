<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llScheduleLecture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_textlines_bold_top"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="6dp"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold|italic"
            android:id="@+id/tvScheduleHours"
            style="@style/LayoutScheduleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_time_30dp"
            android:text="08:00 - 10:00" />

        <TextView
            android:id="@+id/tvScheduleClass"
            style="@style/LayoutScheduleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_class_30dp"
            android:text="Ruangan 1A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvScheduleSubject"
            style="@style/LayoutScheduleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_subject_30dp"
            android:text="MATEMATIKA"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvScheduleTeacher"
            style="@style/LayoutScheduleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:drawableStart="@drawable/ic_teacher_30dp"
            android:text="Wahyu Putro, .SPd" />
    </LinearLayout>
</LinearLayout>
